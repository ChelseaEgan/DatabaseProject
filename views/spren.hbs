<!-------------------------------
    ADD NEW SPREN
-------------------------------->
<h1>Add a new spren</h1>
<form class="form-inline" action="/action_page.php">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" id="name">
  </div>
  <div class="form-group">
    <label for="species">Species:</label>
    <select class="form-control" id="species">
      {{# each speciesArray}}
      <option>{{ this }}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="bonded">Bonded:</label>
    <select class="form-control" id="bonded">
      <option>True</option>
      <option>False</option>
    </select>
  </div>
  <div class="form-group">
    <input type="submit" form="msform" name="submit" class="submit action-button" value="Submit" />
  </div>
</form>

<!-------------------------------
    LIST ALL SPREN
-------------------------------->
<h1>All spren</h1>
{{#if spren}}
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Bonded</th>
    </tr>
  </thead>
  <tbody>
    {{#each spren}}
    <tr>
      <td>{{name}}</td>
      <td>{{species}}</td>
      <td>{{bonded}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<h3>No spren in table</h3>
{{/if}}